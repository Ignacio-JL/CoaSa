@{
    ViewData["Title"] = "ListaUsuarios";
}
<h1>Lista de usuarios</h1>

<div class="col-md-12">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Id Usuario</th>
                <th scope="col">Nombre Usuario</th>
                <th scope="col">Nombre</th>
                <th scope="col">Email</th>
                <th scope="col">Teléfono</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuarios in Model)
            {
            <tr>
                <td scope="row">@usuarios.id</td>
                <td>@usuarios.UserName</td>
                <td>@usuarios.Nombre</td>
                <td>@usuarios.Email</td>
                <td>@usuarios.Telefono</td>
                <td>@Html.ActionLink("Eliminar", "Eliminar", new {@usuarios.id})</td>
                <td>@Html.ActionLink("Editar", "Editar", new { @usuarios.id})</td>
            </tr>
            }
        </tbody>
    </table>


</div>
<hr />
<div class="col-md-12 text-center">
    <a class="btn btn-danger" href="https://localhost:44382/Home/Crear" style="margin: 20px auto;">Crear usuario</a>
</div>





